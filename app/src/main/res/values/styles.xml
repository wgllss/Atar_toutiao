<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyleLarge" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minHeight">30dip</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:maxWidth">30dip</item>
    </style>

    <!-- ListView的父style,去除一些基本设置 -->
    <style name="BaseListViewStyle" parent="android:Widget.ListView.White">
        <item name="android:cacheColorHint">#00000000</item> <!-- 去除拖动时默认的黑色背景 -->
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">0.3dp</item>
        <item name="android:listSelector">#00000000</item> <!-- 去除选中时的黄色底色 -->
        <!-- <item name="android:overScrollMode">never</item> -->
        <!-- 去除下拉上拉水阴影虚化 -->
        <!-- <item name="android:scrollbars">none</item> -->
        <!-- 去除滚动条 -->
        <item name="android:fadingEdge">none</item> <!-- 去除ListView滑到顶部和底部时边缘的黑色阴影 -->
    </style>

    <style name="Common_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">#D7AC72</item>-->
        <item name="colorPrimaryDark">#00000000</item><!-- 状态栏颜色-->
        <!--<item name="toolbar_under_line">#D7AC72</item>-->
        <!--<item name="buttonTextColor">@color/color_A38B53</item>-->
        <!--<item name="buttonBg">#D7AC72</item>-->
        <!--<item name="buttonBgClick">@color/color_A38B53</item>-->
        <!--<item name="buttonBgEnable">#f0dfc8</item>-->
    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>
