<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_common_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_tab_menu_bar_height"
        android:gravity="center"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/frame_move"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linear_tab_bar"
        android:layout_marginTop="-2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:id="@+id/view_move"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_move"
        android:layout_marginTop="-1dp"
        android:flipInterval="30"
        android:focusable="false"
        android:persistentDrawingCache="animation" />

</RelativeLayout>